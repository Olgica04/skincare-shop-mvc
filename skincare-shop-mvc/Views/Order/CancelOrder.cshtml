@using Application.Dto.Product;
@model ProductDto;

@{
    Layout = "_Layout";
}
<form asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@Model.Id" method="post">
    <label>Are you sure you want to cancel your order?</label>
    <a asp-controller="Order" asp-action="CancelOrder" asp-route-id="@Model.Id" method="post" class="btn btn-danger active" role="button">
        Confirm
    </a>
    Are you sure you want to delete this item?
    <button type="submit" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Confirm</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Return</a>
</form>